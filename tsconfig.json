{
  "include": ["src/**/*.ts", "rollup.config.ts"],
  "exclude": ["src/**/__mocks__/**/*.ts", "src/**/__tests__/**/*.ts", ".history"],
  "compilerOptions": {
    "target": "es6",
    "allowJs": true,
    "resolveJsonModule":true,
    "rootDir": ".",
    "outDir": "dist/esm",
    "module": "ESNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution":"node",
    "noImplicitAny": true,
    "removeComments": true,
    "strict": true,
    "sourceMap": true,
    "declaration": false,
    "lib": ["ES2021", "DOM"],
    "plugins": [
      { "transform": "ts-auto-mock/transformer", "cacheBetweenTests": false }
    ]
  }
}
