{
  "files": ["src/ripple.ts"],
  // "exclude": ["node_modules/**/*.ts"],

  "compilerOptions": {
    "target": "es5",
    "allowJs": true,
    "rootDir": "src",
    "outDir": "build",
    "module": "ESNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution":"node",
    // "resolveJsonModule": true,
    "noImplicitAny": true,
    "removeComments": true,
    "strict": true,
    "sourceMap": true,
    "lib": ["ES2021", "DOM"],
    "plugins": [
      { "transform": "ts-auto-mock/transformer", "cacheBetweenTests": false }
    ]
  }
}
